<div class="d-flex flex-row flex-wrap justify-content-center pt-5 mt-5">
   
   <% @articles.reverse_each do |article| %>
      <div class="card m-4 shadow d-flex flex-column justify-content-between bg-light border-0" style="width: 18rem; height: 15rem;">

         <%= link_to article_path(article), class: "text-decoration-none link-dark" do %>
            <div class="card-body d-flex flex-column justify-content-between" style="height: 10rem;">
               <h4 class="card-title"><%= article.title %></h4>
               <h6 class="card-subtitle mb-2 text-muted"><%= article.author %></h6>
               <p class="card-text"><%= article.text[0, 50]... %></p>
               <p class="card-text text-muted">(<%= article.created_at.utc.localtime.strftime('%d %b %Y %I:%M %p') %>)</p> 
            </div>
         
         <% end %>
         
         <div class="d-flex flex-row justify-content-end m-3">
               <button type="button" class="btn btn-outline-success btn-sm mx-0 border-0"><%= link_to '✏️', edit_article_path(article), class: "text-decoration-none text-white" %></button>
               <button type="button" class="btn btn-outline-danger btn-sm border-0"><%= link_to '❌', article_path(article), method: :delete, data: {confirm: 'Delete chosen blog PERMANENTLY?'}, class: "text-decoration-none text-white" %></button>
         </div>
      
      </div>
   <% end %>

</div>