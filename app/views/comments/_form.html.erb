<%= form_with scope: :comment, model: [@article, @comment], local: true do |f| %>

<p>
<% if @comment.errors.any? %>

   <div class="d-flex flex-wrap justify-content-center fixed-bottom m-5">      
         <% @comment.errors.full_messages.each do |message| %>
            <div class="alert alert-danger m-3 " role="alert"><%= message %></div>
         <% end %>
   </div>
<% end %>
</p>

<div class="d-flex flex-row flex-wrap justify-content-center pt-5 mt-5">

  <div class="card m-3 shadow d-flex flex-column justify-content-between bg-light border-0" style="width: 50rem;">

    <div class="card-body d-flex flex-column justify-content-between text-center">
      <h4 class="card-title ubuntu-font text-maroon border-warning"><%= @article.title %></h4>
      <h6 class="card-subtitle mb-2 text-muted">By: <%= @article.author %></h6>
    </div>

    <div class="card-body d-flex flex-column justify-content-between">
        <%= f.text_field :name, placeholder: "Name", class: "text-center form-control mb-2" %>

        <%= f.text_area :comment_body, placeholder: "Comment", class: "text-center form-control mb-2" %>
    </div>

    <div class="d-flex flex-row justify-content-center m-3">
    
      <%= link_to 'Cancel', @article, class: "btn btn-danger mx-3 shadow text-decoration-none text-white " %>

      <%= f.submit 'Comment', class: "btn btn-success mx-3 shadow" %>  
    </div>

  </div>  

<% end %>

</div>